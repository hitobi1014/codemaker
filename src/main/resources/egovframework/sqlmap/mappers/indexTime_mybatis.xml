<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="kr.co.codemaker.user.lessoninfo.dao.LessonIndexMapper">

	<select id="selectIndexTime"  resultType="kr.co.codemaker.user.lessoninfo.vo.IndexTimeVO">
		SELECT
   			user_id,
   			lidx_id,
    		lidx_curtime
		 FROM
		    index_time
	</select>
	
	<select id="selectCurTime" parameterType="kr.co.codemaker.user.lessoninfo.vo.IndexTimeVO" resultType="kr.co.codemaker.user.lessoninfo.vo.IndexTimeVO">
		SELECT lidx_curtime
		  FROM index_time
		  <where>
		  	AND user_id=#{userId}
		  	AND lidx_id=#{lidxId}
		  </where>
	</select>
	
	<insert id="insertIndexTime" parameterType="kr.co.codemaker.user.lessoninfo.vo.IndexTimeVO">
		INSERT INTO index_time
			 VALUES (#{userId},#{lidxId},0)
	</insert>
	
	<update id="update" parameterType="kr.co.codemaker.user.lessoninfo.vo.IndexTimeVO">
		UPDATE index_time
		   SET lidx_curtime = #{lidxCurtime}
		 <where>
		 	AND lidx_id = #{lidxId}
		 </where>  
	</update>

<select id="selectLidxId" resultType="kr.co.codemaker.user.lessoninfo.vo.IndexTimeVO" parameterType="java.lang.String">
select c.lidx_id from lesson a, pay b, lesson_index c where b.user_id = #{userId} and a.les_id = b.les_id and a.les_id=c.les_id
</select>
</mapper>