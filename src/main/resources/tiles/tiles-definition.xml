<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	<!-- 1. template 생성 
		 2. 개별 페이지에 대한 컨텐츠 영역 설정
		 -->

	<!-- 회원_메인페이지 -->
	<definition name="main.layout" template="/WEB-INF/views/user/main/layout/layout.jsp">
		<put-attribute name="header" value="/WEB-INF/views/user/main/layout/main_header.jsp"/>
		<put-attribute name="loginHeader" value="/WEB-INF/views/user/main/layout/main_loginHeader.jsp"/>
		<put-attribute name="footer" value="/WEB-INF/views/user/main/layout/main_footer.jsp"/>
		<put-attribute name="content" value=""/>
	</definition>
	
	<!-- 회원_마이페이지 -->
	<definition name="mypage.layout" template="/WEB-INF/views/user/mypage/layout/layout.jsp">
		<put-attribute name="header" value="/WEB-INF/views/user/mypage/layout/mypage_header.jsp"/>
		<put-attribute name="footer" value="/WEB-INF/views/user/mypage/layout/mypage_footer.jsp"/>
		<put-attribute name="left" value="/WEB-INF/views/user/mypage/layout/mypage_left.jsp"/>
		<put-attribute name="content" value=""/>
	</definition>
	
	<!-- 관리자_메인페이지 -->
	<definition name="adminMain.layout" template="/WEB-INF/views/admin/layout/layout.jsp">
		<put-attribute name="header" value="/WEB-INF/views/admin/layout/header.jsp"/>
		<put-attribute name="nav" value="/WEB-INF/views/admin/layout/nav.jsp"/>
		<put-attribute name="footer" value="/WEB-INF/views/admin/layout/footer.jsp"/>
		<put-attribute name="content" value=""/>
	</definition>
	
	<!-- 교사_메인페이지 -->
	<definition name="teacherMain.layout" template="/WEB-INF/views/teacher/layout/layout.jsp">
		<put-attribute name="header" value="/WEB-INF/views/teacher/layout/header.jsp"/>
		<put-attribute name="nav" value="/WEB-INF/views/teacher/layout/nav.jsp"/>
		<put-attribute name="footer" value="/WEB-INF/views/teacher/layout/footer.jsp"/>
		<put-attribute name="content" value=""/>
	</definition>
	
	<!-- 상속을 통해 basic.layout에 설정된 header, left의 기본값을 사용하게 되며
		만약 변경을 원하면 해당 속성을 다른 값으로 설정하면 된다.
		스프링 컨트롤러에서 리턴하는 viewName에 해당하는 tiles definition 이름이 있는지 찾아
		동일한 값이 있을 경우 해당 definition을 통해 응답을 생성한다.  
		
		tiles.member.list
		tiles.member.member
		tiles.member.regist
		tiles.member.modify
		-->
	
	<!-- 회원_메인페이지 -->	
	<definition name="mainT/*/*/*" extends="main.layout">
		<put-attribute name="content" value="/WEB-INF/views/{1}/{2}/{3}.jsp"/>
	</definition>
	
	<!-- 회원_마이페이지 -->
	<definition name="mypageT/*/*/*" extends="mypage.layout">
		<put-attribute name="content" value="/WEB-INF/views/{1}/{2}/{3}.jsp"/>
	</definition>
	
	<!-- 관리자_마이페이지 -->
	<definition name="adminPage/*/*/*" extends="adminMain.layout">
		<put-attribute name="content" value="/WEB-INF/views/{1}/{2}/{3}.jsp"/>
	</definition>
	
	<!-- 교사_마이페이지 -->
	<definition name="teacherPage/*/*/*" extends="teacherMain.layout">
		<put-attribute name="content" value="/WEB-INF/views/{1}/{2}/{3}.jsp"/>
	</definition>
	
</tiles-definitions>

